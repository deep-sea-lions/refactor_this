<div class="todo-creator collapsed">
  <%= link_to "new todo", new_todo_path, :class => 'new-todo-button' %>

  <form accept-charset="UTF-8" action="/todos" method="post" class="new-todo-form">
   <label for="todo_title">Title</label>
   <input id="todo_title" name="title" size="30" type="text">
   <label for="todo_body">Body</label>
   <input id="todo_body" name="body" size="30" type="text">
   <label for="todo_list_name">List name</label>
   <input id="todo_list_name" name="list_name" size="30" type="text" value="">
   <input name="commit" type="submit" value="Create Todo">
  </form>
</div>

<div class="tooltip"></div>
<div class="todos">
  <% @todos.each do |list, todos| %>
    <h2><%= list %></h2>
    <ul id="<%= list.gsub(' ', '-') %>">
      <% todos.each do |todo| %>
        <li>
          <%= link_to todo, todo %>
        </li>
      <% end %>
    </ul>
  <% end %>

</div>
